<!DOCTYPE html>
<html>
  <head>
    <title>Scott's Bake Shop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <meta name="description" content="Fresh Baked Bread serving the Dallas Texas Area">
     <meta name="keywords" content="Bread, Bakery, Dallas, Plano, Frisco, ">


    <div class="container-fluid">
          <div class="introSection row"> 

              <div class="col-sm signature" >
                <%= link_to 'faq', faq_path, class: 'nav-link' %>
              </div>

              <div class="col-sm logo_image signature" >
                  <%= link_to( image_tag("Logo2.png"), root_path ) %>
              </div>

              <div class="signature col-sm">

                  <a  href="mailto:scottyfnbakes@gmail.com"> <i class="fa fa-envelope nav-link" style="font-size:25px; color: black;" ></i></a>

                  <a  href="https://www.instagram.com/scottyfnbakes/?igshid=1msej3frrklrp"> <i class="fa fa-instagram nav-link" style="font-size:25px; color: black;" ></i></a>

                  <% if user_signed_in? %>
                    <%= link_to "ADMIN LINK", admin_page_path %>
                  <% end %> 
              </div>

          </div>
    </div>

    <%= yield %>
  </body>
</html>
