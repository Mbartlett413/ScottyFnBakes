
<h1>Admin Page</h1>
<h6>Orders This Week:</h6>

<h1>Days</h1>

<table class="table table-striped">
  <thead>
    <tr>

      <th>Date:</th>
      <th>Total Orders:</th>
      <th>Order Limit </th>
      <th>Order Details:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.this_date %> </td>
        <td><%= day.openings %> </td>
        <td><%= day.order_limit %></td>
        <td> <% day.orders.each do |order| %>
                <% order.order_details.each do|k,v| %>
                  <p><%= v['quantity']%> : <%= v['type'] %></p>
                <% end %>
             <% end %>
        </td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

