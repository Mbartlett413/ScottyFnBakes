
<div class ="orderButtonSection">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<%= link_to 'Order', new_order_path, class: 'btn btn-outline-dark' %>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid sectionBody  justify-content-center">
	<div class="row Menu2">
		<% @category.each do |cat| %>
			<% if cat.active != false %>					
				<ul class="menu_list">
					<h3 class="center"><%= cat.name %>: $<%= cat.price %></h3>
					<% @loafs.each do |loaf| %>
						<% if loaf.active_item == true %>
							<li> <%= loaf.name %> </li>
						<% end %>
					<% end %>
				</ul>

			<% end %>
		<% end %>
	</div>
</div>


<div id ="footer">
	<div class="col-lg col-md col-sm text-left">
	  	<h6 class="text-white">Operating under the <a href="https://texascottagefoodlaw.com/">Texas Cottage Act</a>
	  	</h6>
	</div>
</div>	







