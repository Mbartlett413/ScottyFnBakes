<p id="notice"><%= notice %></p>

<h1>Days</h1>

<table>
  <thead>
    <tr>
      <th> order_limit </th>
      <th> openings </th>
      <th> this_date </th>
      <th> todays_order </th>
      <th> closed       </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.order_limit %> </td>
        <td><%= day.openings %> </td>
        <td><%= day.this_date %> </td>
        <td><%= day.todays_order %> </td>
        <td> <%= day.closed %> </td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

