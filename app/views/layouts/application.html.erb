<!DOCTYPE html>
<html>
  <head>
    <title>ScottyFnBakes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <nav class="navbar fixed-top navbar-light bg-light">
        <a class="navbar-brand" href="#" style="margin: auto;">Scotty Fn Bakes</a>
        <a class="navbar-brand" > IG</a>
      </nav>
      <div>
        <h1>ADMIN LINKS:</h1>
        <ul>
          <li><%= link_to "Home", root_path, class:'navbar-link text-white' %></li>
          <li><%= link_to "Sign Up", new_user_registration_path, class:'navbar-link text-white' %></li>
          <li><%= link_to "Loaf", new_loaf_path, class:'navbar-link text-white' %></li>
          <li><%= link_to "Day", new_day_path, class:'navbar-link text-white' %></li>
          <li><%= link_to "Order", new_order_path, class:'navbar-link text-white' %></li>
        </ul>
      </div>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
