<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12">
			<h6>Guest Name</h6>
			<p><%= @order.guest_name %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Guest Number</h6>
			<p><%= @order.guest_number %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Calls Ok?</h6>
			<p><%= @order.call %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Text Ok?</h6>
			<p><%= @order.text %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Order Date</h6>
			<p><%= @order.order_date %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Order Details</h6>
			<p><%= @order.order_details %></p>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12">
						<h6>Paid?</h6>
			<p><%= @order.paid %></p>
		</div>

	</div>
</div>
<ul>
	<li> 
		<%= link_to 'Destroy', @order, method: :delete, data: { confirm: 'Are you sure?' } %> 
	</li>
	<li> 
		<%= link_to 'Edit', edit_order_path(@order) %> 
	</li>
</ul>
