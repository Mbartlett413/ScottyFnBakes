	<!-- Section Two -->
<div class="container-fluid">
	<div class="row justify-content-center sectionTwo">

			<div class="d-inline-block col-sm-8 col-md-8 col-lg-8 infoBox">
				<h3>Comin' in hot this Week</h3>
				<ul>
					<% @loafs.each do |x| %>
						<% if x.active_item == true %>
							<li> <%= x.name %> </li>
							<sub><%= x.ingredients %>... $<%= x.price %></sub>
						<% end %>
					<% end %>
				</ul>
			</div>

	</div>
	<!-- Section Three -->
    <div class="row sectionThree">

<div class="col-sm-12 col-md-12 col-lg-12">
	<h3>Reserve your loaf today!</h3>
	<hr>
</div>
    	
    	<div class="col-sm-12 col-md-12 col-lg-12" id="calendar">
			<%= calendar events: @days, number_of_days: 7 do |date, event| %>

			  <button class="day_selector btn-sm btn-warning"><%= date.strftime("%Y-%m-%d") %></button>
			  <% event.each do |x| %>
			  	<p><%= x.openings %> Left</p>
			  <% end %>
 
			<% end %> 
			<hr>
    	</div>

		
	</div>
